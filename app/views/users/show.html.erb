<div class="container">
	<h1><%= current_user.name %></h1>
	<table class="table table-striped">  
    <thead>  
      <tr>  
        <th>Date</th>  
        <th>Player 1</th>  
        <th>Player 2</th>  
        <th></th>  
      </tr>  
    </thead> 
    <tbody>
    <% @replays.each do |replay| %>  
      <tr>  
        <td><%= replay.time %></td>  
        <td><%= replay.player1name %></td>  
        <td><%= replay.player2name %></td>  
        <td><%= link_to "Download Replay", download_path(replay.id) %></td>  
      </tr>  
    <% end %>  
    </tbody>  
  </table>
</div>